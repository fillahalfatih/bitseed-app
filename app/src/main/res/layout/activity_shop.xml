<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop"
    android:name="com.google.android.gms.maps.SupportMapFragment">

    <FrameLayout
        android:id="@+id/flMaps"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:background="@drawable/card_image_bg"
        android:layout_margin="16dp"
        android:padding="4dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

    </FrameLayout>

    <ScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/flMaps">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="128dp">

            <!--Card-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_1"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_2"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_3"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_1"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_2"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <ImageView
                    android:layout_weight="0.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/store_3"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/namaToko6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#454545"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/alamatToko6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18sp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Navigasi -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Belajar -->
        <ImageView
            android:id="@+id/learn_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/learn"
            android:contentDescription="Belajar"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Toko -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shop_filled"
            android:contentDescription="Profil"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Profil -->
        <ImageView
            android:id="@+id/profile_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Toko"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
