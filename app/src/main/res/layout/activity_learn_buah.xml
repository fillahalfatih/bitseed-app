<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnBuah">

    <!--  Container  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="85dp">
            <!--  Hero  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:background="@color/green_primary"
                android:orientation="vertical"
                android:id="@+id/hero">
                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="365dp"
                    android:src="@drawable/plant_full"
                    android:layout_marginBottom="-345dp"
                    android:layout_marginLeft="-90dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <ImageView
                        android:id="@+id/to_learn"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rekomendai Bibit Buah"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/menu_card"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="-35dp"
                            android:layout_marginBottom="-67dp"
                            android:layout_marginLeft="-17dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🍉"
                                android:textAlignment="textStart"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilihan bibit buah berkualitas"
                                android:textAlignment="textStart"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:lineHeight="50dp"
                                android:textColor="#454545"
                                android:layout_marginLeft="12dp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="-65dp"
                            android:layout_marginLeft="275dp"
                            android:layout_marginBottom="-32dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--  Card : Bibit  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/titleBibit"
                android:paddingBottom="18dp"
                android:paddingTop="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <!--    Individual Cards : Mangga Kiojay    -->
                        <LinearLayout
                            android:id="@+id/cardMangga"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginRight="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/mangga_kio"
                                    android:padding="18dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mangga Kiojay"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!--    Individual Cards : Apel    -->
                        <LinearLayout
                            android:id="@+id/cardApel"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginLeft="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/apel_fuji"
                                    android:padding="20dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Apel Fuji"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <!--    Individual Cards : Kiwi    -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginRight="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/kiwi"
                                    android:padding="18dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kiwi"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!--    Individual Cards : Pisang    -->
                        <LinearLayout
                            android:id="@+id/cardPisang"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginLeft="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pisang"
                                    android:padding="20dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pisang"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <!--    Individual Cards : Pepaya    -->
                        <LinearLayout
                            android:id="@+id/cardPepaya"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginRight="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/papaya"
                                    android:padding="20dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pepaya"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!--    Individual Cards : Durian    -->
                        <LinearLayout
                            android:id="@+id/cardDurian"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/card_individual"
                            android:layout_marginLeft="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/card_image_bg"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/square_pattern"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="-125dp"
                                    android:alpha="0.5"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/durian"
                                    android:padding="18dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="12dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Durian"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="12dp"
                                    android:textColor="@color/white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginBottom="-8dp">
                                    <TextView
                                        android:layout_weight="4.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori Buah"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"/>
                                    <ImageView
                                        android:layout_weight="0.5"
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/love"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--  Navigasi  -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Belajar -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/learn_filled"
            android:contentDescription="Belajar"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Profil -->
        <ImageView
            android:id="@+id/shop_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shop"
            android:contentDescription="Profil"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Toko -->
        <ImageView
            android:id="@+id/profile_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Toko"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
