<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Latar belakang berwarna putih -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Warna latar belakang -->
            <corners android:radius="6dp" /> <!-- Radius batas (sesuaikan sesuai kebutuhan) -->
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp"/>
        </shape>
    </item>
</layer-list>