<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <!--  Container  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="85dp">
        <!--  Hero  -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/green_primary"
        android:orientation="vertical"
        android:id="@+id/hero">
        <ImageView
            android:layout_width="260dp"
            android:layout_height="365dp"
            android:src="@drawable/plant_full"
            android:layout_marginBottom="-340dp"
            android:layout_marginLeft="-90dp"/>
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari bibit, pupuk, atau toko terdekat"
            android:background="@drawable/rounded_white_base"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"/>

        <!-- Layout untuk 3 ImageView secara horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:paddingTop="16dp"
            android:paddingBottom="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_card"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/square_pattern"
                    android:layout_marginTop="-35dp"
                    android:layout_marginBottom="-67dp"
                    android:layout_marginLeft="-25dp"/>
                <ImageView
                    android:id="@+id/favorit"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorit"
                    android:contentDescription="Image 1"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorit"
                    android:textAlignment="center"
                    android:layout_marginTop="-6dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/komunitas"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/komunitas"
                    android:contentDescription="Image 2"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Komunitas"
                    android:textAlignment="center"
                    android:layout_marginTop="-6dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/chatbot"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chatbot"
                    android:contentDescription="Image 3"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ChatBot"
                    android:textAlignment="center"
                    android:layout_marginTop="-6dp"
                    android:textSize="12sp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/square_pattern"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-75dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <!--  Card : Bibit  -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/titleBibit"
        android:paddingBottom="18dp"
        android:paddingTop="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Rekomendasi Bibit"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lihat semua"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll_bibit"
            android:layout_marginTop="16dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--    Individual Cards : Bibit Buah    -->
                <LinearLayout
                    android:id="@+id/card_buah"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_individual"
                    android:layout_marginLeft="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/card_image_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="-125dp"
                            android:alpha="0.5"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_buah"
                            android:padding="6dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="12dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/square_pattern_white"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="-25dp"
                            android:layout_marginLeft="115dp"
                            android:alpha="0.7"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bibit Buah"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textAlignment="center"
                            android:background="@drawable/stroke_button_bg"/>
                    </LinearLayout>
                </LinearLayout>
                <!--    Individual Cards : Tanaman Hias    -->
                <LinearLayout
                    android:id="@+id/card_hias"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_individual"
                    android:layout_marginLeft="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/card_image_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="-125dp"
                            android:alpha="0.5"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_tanaman"
                            android:padding="12dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="12dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/square_pattern_white"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="-25dp"
                            android:layout_marginLeft="125dp"
                            android:alpha="0.7"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanaman Hias"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textAlignment="center"
                            android:background="@drawable/stroke_button_bg"/>
                    </LinearLayout>
                </LinearLayout>
                <!--    Individual Cards : Bibit Sayur    -->
                <LinearLayout
                    android:id="@+id/card_sayur"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_individual"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/card_image_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="-125dp"
                            android:alpha="0.5"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_sayur"
                            android:padding="6dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="12dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/square_pattern_white"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="-25dp"
                            android:layout_marginLeft="115dp"
                            android:alpha="0.7"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bibit Sayur"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textAlignment="center"
                            android:background="@drawable/stroke_button_bg"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

        <!--  Card : Pupuk  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/titlePupuk"
            android:paddingBottom="18dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Rekomendasi Pupuk"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat semua"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">
                <!--    Individual Cards : Bibit Buah    -->
                <LinearLayout
                    android:id="@+id/cardOrganik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_individual"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/card_image_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/square_pattern"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="-125dp"
                                android:alpha="0.5"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/organik_3"
                                android:padding="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="12dp">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/square_pattern_white"
                                android:layout_marginTop="-25dp"
                                android:layout_marginBottom="-25dp"
                                android:layout_marginLeft="125dp"
                                android:alpha="0.7"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pupuk Organik"
                                android:textSize="16sp"
                                android:layout_marginBottom="12dp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Detail"
                                android:textAlignment="center"
                                android:background="@drawable/stroke_button_bg"/>
                        </LinearLayout>
                </LinearLayout>
                <!--    Individual Cards : Tanaman Hias    -->
                <LinearLayout
                    android:id="@+id/cardAnorganik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_individual"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/card_image_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/square_pattern"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="-125dp"
                            android:alpha="0.5"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/anorganik_3"
                            android:padding="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="12dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/square_pattern_white"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="-25dp"
                            android:layout_marginLeft="135dp"
                            android:alpha="0.7"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pupuk Anorganik"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail"
                            android:textAlignment="center"
                            android:background="@drawable/stroke_button_bg"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <!--  Navigasi  -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_filled"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Belajar -->
        <ImageView
            android:id="@+id/learn_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/learn"
            android:contentDescription="Belajar"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Toko -->
        <ImageView
            android:id="@+id/shop_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shop"
            android:contentDescription="Profil"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Profil -->
        <ImageView
            android:id="@+id/profile_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Toko"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
