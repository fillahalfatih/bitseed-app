<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorit">

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Komunitas BitSeed"
            android:textSize="30sp"
            android:textStyle="bold"
            android:lineHeight="46sp"
            android:textColor="#333333"
            android:textAlignment="center"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat datang di Komunitas kami! Saat ini, fitur ini hanya dapat diakses melalui web. Kunjungi website BitSeed untuk mulai berpartisipasi."/>
        <Button
            android:id="@+id/toWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunjungi website"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <!--  Navigasi  -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:background="@drawable/navigation_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- Home -->
        <ImageView
            android:id="@+id/home_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_filled"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Belajar -->
        <ImageView
            android:id="@+id/learn_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/learn"
            android:contentDescription="Belajar"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Profil -->
        <ImageView
            android:id="@+id/shop_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/shop"
            android:contentDescription="Profil"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Toko -->
        <ImageView
            android:id="@+id/profile_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Toko"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
