<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pepaya">

    <!--  Heading  -->
    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/green_primary"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:elevation="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/square_pattern_white"
            android:layout_marginBottom="-55dp"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="85dp"
            android:alpha="0.75"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_gravity="top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - - â—¯"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:alpha="0.5"/>

                <TextView
                    android:id="@+id/namaBuah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/kategoriBuah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:src="@drawable/papaya"
                android:background="@drawable/card_image_bg"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--  Content  -->
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="245dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_bagian_1"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagian 1: Persiapan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#454545"
                    android:background="#FFE0B2"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/persiapan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineHeight="12pt"
                    android:textColor="#454545"
                    android:paddingTop="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_bagian_2"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagian 2: Lahan Penanaman"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#454545"
                    android:background="@color/red_pastel"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/lahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineHeight="12pt"
                    android:textColor="#454545"
                    android:paddingTop="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_bagian_3"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bagian 3: Penanaman"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#454545"
                    android:background="@color/teal_pastel"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/penanaman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineHeight="12pt"
                    android:textColor="#454545"
                    android:paddingTop="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>